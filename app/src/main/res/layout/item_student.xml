<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    
    <com.tarena.app.views.CircleImageView
        android:id="@+id/item_cm_student_head"
        android:layout_width="36dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="3dp"
        android:layout_height="36dp" />
    

    <TextView
        android:id="@+id/item_tv_student_name"
        android:textSize="13sp"
        android:layout_marginLeft="3dp"
        android:textColor="#212121"
        android:layout_toRightOf="@+id/item_cm_student_head"
        android:layout_alignTop="@+id/item_cm_student_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_tv_student_username"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        android:textColor="#D1D1D1"
        android:layout_alignLeft="@+id/item_tv_student_name"
        android:layout_below="@+id/item_tv_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/item_tv_line"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/item_cm_student_head"
        android:layout_below="@+id/item_cm_student_head"
        android:layout_width="match_parent"
        android:background="#C8C7CC"
        android:layout_height="0.5dp" />
    
    
    <ImageView
        android:id="@+id/item_iv_right_arr"
        android:src="@drawable/ic_arr_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/item_tv_points"
        android:text="积分:0"
        android:textSize="11sp"
        android:textColor="#000000"
        android:layout_above="@+id/item_tv_line"
        android:layout_marginBottom="2dp"
        android:layout_toLeftOf="@+id/item_iv_right_arr"
        android:layout_marginRight="46dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/item_tv_coins"
        android:text="金币:0"
        android:textSize="11sp"
        android:textColor="#000000"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="2dp"
        android:layout_above="@+id/item_tv_line"
        android:layout_toLeftOf="@+id/item_tv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>