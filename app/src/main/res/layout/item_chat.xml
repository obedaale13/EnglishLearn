<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <com.tarena.app.views.CircleImageView
        android:id="@+id/item_iv_chat_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:src="@drawable/ic_my_default_head" />


    <TextView
        android:id="@+id/item_tv_chat_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_iv_chat_head"
        android:layout_marginRight="20dp"
        android:background="@drawable/chat_right_gb"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/item_iv_chat_head"
        android:text="sdfdsfsdfdsfsdf"
        android:textColor="#000000"
        android:textSize="14sp" />


    <RelativeLayout
        android:id="@+id/lv_imagesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_iv_chat_head"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/item_iv_chat_head"
        android:background="#00ff00">

    </RelativeLayout>


</RelativeLayout>